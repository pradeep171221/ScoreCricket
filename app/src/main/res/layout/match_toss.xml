<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <TextView
        android:id="@+id/tossDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical|center"
        android:minHeight="40dp"
        android:text="Toss"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/matchToss"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tossDetails"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/won_by"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Won By:"/>

        <RadioGroup
            android:id="@+id/won_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="0"
            android:orientation="vertical"
            android:layout_marginLeft="25dp">

            <RadioButton
                android:id="@+id/team_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team A"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/team_two"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Team B" />

        </RadioGroup>

        <TextView
            android:id="@+id/choose_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Choose to:"/>

        <RadioGroup
            android:id="@+id/choose_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:layout_row="0"
            android:orientation="vertical"
            android:layout_marginLeft="25dp">

            <RadioButton
                android:id="@+id/choose_bat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bat"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/choose_bowl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bowl" />

        </RadioGroup>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/match_overs"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical|left"
                android:layout_weight="0.1"
                android:text="Overs:"/>

            <com.shawnlin.numberpicker.NumberPicker
                android:id="@+id/number_picker"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                app:np_dividerColor="@color/colorPrimary"
                app:np_formatter="@string/number_picker_formatter"
                app:np_height="180dp"
                app:np_max="20"
                app:np_min="1"
                app:np_selectedTextColor="@color/colorPrimary"
                app:np_selectedTextSize="18dp"
                app:np_textColor="@color/colorPrimary"
                app:np_textSize="18dp"
                app:np_typeface="@string/roboto_light"
                app:np_value="3"
                app:np_width="64dp" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/createMatch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/matchToss"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Create" />


</RelativeLayout>